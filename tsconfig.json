{
    "compilerOptions": {
        "declaration": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "allowJs": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "module": "CommonJS",
        "target": "ES2018",
        "outDir": "build"
    },
    "include": [
		"src/**/*.ts",
		"src/**/*.js"
    ],
    "exclude": [
        "node_modules/",
        "test",
        "build"
    ]
}